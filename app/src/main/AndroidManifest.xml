<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kumparanapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".KumparanApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KumparanApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".feature.photo.ui.PhotoViewActivity"
            android:exported="false" />
        <activity
            android:name=".feature.photo.ui.PhotoActivity"
            android:exported="false" />
        <activity
            android:name=".feature.userdetail.ui.DetailUserActivity"
            android:exported="false" />
        <activity
            android:name=".feature.postdetail.ui.DetailPostActivity"
            android:exported="false" />
        <activity
            android:name=".feature.post.ui.PostActivity"
            android:exported="false" />
        <activity
            android:name=".feature.intro.ui.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>